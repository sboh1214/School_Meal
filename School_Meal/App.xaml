<Application
    x:Class="School_Meal.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <AcrylicBrush x:Key="MyAcrylicBackgroundBrush" TintOpacity="0.1" TintColor="Transparent" FallbackColor="White" BackgroundSource="HostBackdrop"/>
                    <AcrylicBrush x:Key="MyAcrylicAccentBrush" TintOpacity="0.9" TintColor="LightGray" FallbackColor="White" BackgroundSource="HostBackdrop"/>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <AcrylicBrush x:Key="MyAcrylicBackgroundBrush" TintOpacity="0.1" TintColor="Transparent" FallbackColor="Black" BackgroundSource="HostBackdrop"/>
                    <AcrylicBrush x:Key="MyAcrylicAccentBrush" TintOpacity="0.9" TintColor="DimGray" FallbackColor="DarkGray" BackgroundSource="HostBackdrop"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>
